# Edit this file, then run: ./run.sh

# Target endpoint
BASE_URL=https://perftest.domain.com
TARGET_PATH=/api/secure-endpoint

# Request shape
REQ_METHOD=GET
REQ_BODY=
REQ_CONTENT_TYPE=application/json
# Optional JSON object for custom headers, e.g. {"Accept":"application/json","X-Test-Run":"baseline"}
EXTRA_HEADERS_JSON={}
# Either set a full cookie header or leave empty
COOKIE_HEADER=sessiondata=replace-this
# Optional shortcut (used only if COOKIE_HEADER is empty)
SESSION_COOKIE=

# Load profile
START_RPS=20
# Format: targetRps:duration, targetRps:duration, ...
RAMP_STAGES=50:2m,100:2m,150:2m,200:2m,250:2m,300:2m
PRE_VUS=200
MAX_VUS=4000
REQ_TIMEOUT=5s

# Optional labels/output
RUN_ID=
PROM_RW_URL=http://100.x.y.z:9090/api/v1/write
K6_PROM_OUTPUT=experimental-prometheus-rw
K6_PROMETHEUS_RW_PUSH_INTERVAL=5s
K6_PROMETHEUS_RW_STALE_MARKERS=true
K6_PROMETHEUS_RW_TREND_STATS=p(90),p(95),p(99),avg,min,max
